{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/film-inspection-forms",
      "destination": "/html/mp_data_forms_html/film_inspection_forms_list.html",
      "permanent": false
    },
    {
      "source": "/film-inspection-form",
      "destination": "/html/mp_data_forms_html/16_gsm_kranti.html",
      "permanent": false
    },
    {
      "source": "/inline-inspection-forms",
      "destination": "/html/mp_data_forms_html/inline_inspection_forms_list.html",
      "permanent": false
    },
    {
      "source": "/inline-inspection-form",
      "destination": "/html/mp_data_forms_html/inline_inspection_form.html",
      "permanent": false
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 